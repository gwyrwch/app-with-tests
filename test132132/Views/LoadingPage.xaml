<?xml version="1.0" encoding="UTF-8"?>
<ContentPage BackgroundColor="{DynamicResource SomeLightBackgroundColor}" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="test132132.Views.LoadingPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label Text="Loading" HorizontalOptions="Center" TextColor="{DynamicResource TextColor}"/>
            <ActivityIndicator 
                IsRunning="true" 
                Color="{DynamicResource MainColor}" 
                HorizontalOptions="Center"
            />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

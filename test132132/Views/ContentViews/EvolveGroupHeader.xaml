<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="test132132.Views.ContentViews.EvolveGroupHeaderView"
    BackgroundColor="{DynamicResource SomeLightBackgroundColor}">
    <StackLayout VerticalOptions="Fill" 
                 BackgroundColor="{DynamicResource SomeLightBackgroundColor}"
    >
        <StackLayout.Padding>
            <OnPlatform x:TypeArguments="Thickness" iOS="12,0"/>
        </StackLayout.Padding>
        <Label Text="Kek" 
            VerticalOptions="Center" 
            VerticalTextAlignment="Center" 
            TextColor="{DynamicResource TextColor}"
        >
            <Label.FontAttributes>
                <OnPlatform x:TypeArguments="FontAttributes" iOS="Bold"/>
            </Label.FontAttributes>
        </Label>
    </StackLayout>
</ContentView>
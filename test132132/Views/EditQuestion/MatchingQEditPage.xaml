<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="test132132.MatchingQEditPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Delete" Clicked="Delete_Clicked"/>
        <ToolbarItem Text="Save" Clicked="Save_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label 
                Text="Question:" 
                FontSize="18" 
            />
            <Entry 
                x:Name="QuestionTextEntry" 
                Placeholder="Your question here" 
                FontSize="Medium"
            />
            <Picker
                x:Name="NumberOfAnswersPicker"
                Title="Select the number of answers"
                SelectedIndexChanged="AmountSelected"
            />
            <StackLayout Padding="20,0,25,0" 
                Orientation="Horizontal"
            >
                <Label
                    Text="First part:"
                    HorizontalOptions="Start"
                />
                <Label
                    Text="Second part:"
                    HorizontalOptions="EndAndExpand"
                />
                
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="test132132.MatchingQEditPage" xmlns:helpers="clr-namespace:test132132.Common">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Delete" Clicked="Delete_Clicked"/>
        <ToolbarItem Text="Save" Clicked="Save_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="10" Padding="15">
            <Label 
                Text="Question:" 
                FontSize="18" 
            />
            <Entry 
                x:Name="QuestionTextEntry" 
                Placeholder="Your question here" 
                FontSize="Medium"
            />
            <Label 
                Text="Points:" 
                FontSize="18" 
            />
            <Entry 
                x:Name="PointsEntry"
                Keyboard="Numeric"
                Placeholder="Points for your question"
                FontSize="Medium"
            >
                <Entry.Triggers>
                    <EventTrigger Event="TextChanged">
                        <helpers:IntegerEntryTrigger />
                    </EventTrigger>
                </Entry.Triggers>
            </Entry>
            <Picker
                x:Name="NumberOfAnswersPicker"
                Title="Select the number of answers"
                SelectedIndexChanged="AmountSelected"
            />
            <StackLayout Padding="20,0,20,0" 
                Orientation="Horizontal"
            >
                <Label
                    Text="First part:"
                    HorizontalOptions="Start"
                />
                <Label
                    Text="Second part:"
                    HorizontalOptions="EndAndExpand"
                />              
            </StackLayout>
            <StackLayout Padding="0,0,0,0" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                <ListView
                    x:Name="LeftsListView"
                    ItemsSource="{Binding Lefts}"
                    SeparatorColor="Transparent"
                    ItemSelected="OnLeftsSelected"
                >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Padding="0,0,0,20" Orientation="Horizontal">
                                    <Label Text="suka"/>
                                    <helpers:LineEntry
                                        Text="{Binding Path=., Mode=TwoWay}"
                                        WidthRequest="130"
                                        HorizontalOptions="FillAndExpand" 
                                        BorderColor="Silver"
                                    />
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <ListView
                    x:Name="RightsListView"
                    ItemsSource="{Binding Rights}"
                    SeparatorColor="Transparent"
                    ItemSelected="OnRightsSelected"
                >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Padding="0,0,0,20" Orientation="Horizontal">
                                    <Label Text="1. "/>
                                    <helpers:LineEntry
                                        Text="{Binding Path=.,Mode=TwoWay}"
                                        WidthRequest="130"
                                        HorizontalOptions="FillAndExpand"
                                        BorderColor="Silver"
                                    />
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>                        
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

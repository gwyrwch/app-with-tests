<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="test132132.EditorPage" xmlns:local="clr-namespace:test132132.Common" Title="Editor">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="20" Padding="0,80,0,0" BackgroundColor="{DynamicResource SomeLightBackgroundColor}">
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="0, 0, 0, 50">
                    <Image Source="Editor.png"
                           WidthRequest="220"
                           />
                </StackLayout>
                <StackLayout Spacing="0">
                    <Entry 
                        x:Name="TitleEntry" 
                        Placeholder="Enter the title of the test"
                        Keyboard="Text"
                        HeightRequest="30"
                    />
                    <Picker
                        x:Name="SubjectPicker" 
                        Title="Choose subject"
                        HeightRequest="30"
                    />
                </StackLayout>
                <StackLayout Orientation="Horizontal" Spacing="20" Padding="8,0,0,0">
                    <Label Text="Time limit for test:" FontSize="Medium" TextColor="{DynamicResource Silver}"/>
                    <local:TimeCountdownPicker 
                        x:Name="TimeLimitPicker"
                        SelectedTime="{Binding Countdown}" 
                        WidthRequest="85"
                        HorizontalOptions="Center"
                        TextColor="{DynamicResource MainColor}"
                    />
                </StackLayout>
                <Picker
                    x:Name="TimeModePicker"
                    Title="Choose time mode for the test"
                    HeightRequest="30"
                />
                <Button 
                    Text="New question"
                    BackgroundColor="{DynamicResource LightBackgroundColor}"
                    BorderRadius="10"
                    BorderWidth="1"
                    BorderColor="{DynamicResource MainColor}"
                    Margin="10"
                    TextColor="{DynamicResource MainColor}"
                    Clicked="AddQuestion_Clicked"
               />
                <StackLayout Padding="0,0,0,0">
                   <local:ColoredTableView 
                        Intent="Data" 
                        SeparatorColor="{DynamicResource Silver}" 
                        x:Name="AddedQuestionsTableView"
                   >
                        <TableSection Title="Your questions"/>
                   </local:ColoredTableView>
               </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>

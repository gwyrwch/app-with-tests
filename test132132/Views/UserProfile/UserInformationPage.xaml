<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="test132132.Views.UserProfile.UserInformationPage" 
             xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"
             xmlns:local="clr-namespace:test132132.Common"
             >
    <ContentPage.Content>
        <StackLayout x:Name="Information" Spacing="0">
        <ContentView HeightRequest="100">
             <StackLayout Orientation="Horizontal" 
                    BackgroundColor="{DynamicResource LightBackgroundColor}" 
                    Padding="30,10,10,10"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand"
                    Spacing="20"
             > 
               
                <controls:CircleImage   
                    HeightRequest="80"   
                    WidthRequest="80"   
                    Source="Melnick.jpg"
                    Aspect="AspectFill">  
  
                </controls:CircleImage>  
                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Label  VerticalOptions="Center"
                        Text="{Binding Name}"
                        TextColor="{DynamicResource MainColor}"
                        HorizontalOptions="Start"
                    />
                    <Label VerticalOptions="Center"
                        Text="{Binding Surname}"
                        TextColor="{DynamicResource MainColor}"
                    />       
                </StackLayout>
                
            </StackLayout>   
        </ContentView>
        <local:ColoredTableView Intent="Form" 
                                BackgroundColor="{DynamicResource SomeLightBackgroundColor}" 
                                HeightRequest="100"  
                                SeparatorColor="{DynamicResource SeparatorColor}"
                                >  
            <TableRoot>
                 <TableSection>
                    <ViewCell x:Name="BirthDayViewCell">
                        <StackLayout  
                             Orientation="Vertical" 
                             BackgroundColor="{DynamicResource LightBackgroundColor}"
                             Padding="30,0,0,0"
                        >
                            <Label VerticalOptions="Center" 
                                    Text="Birthday"
                                    TextColor="{DynamicResource Silver}"
                                    FontSize="Micro"
                                    HorizontalOptions="Start" 
                            />
                            <Label VerticalOptions="Center" 
                                    Text="{Binding Birth, StringFormat='{0:MMMM d, yyyy}'}"
                                    TextColor="{DynamicResource MainColor}"
                                    HorizontalOptions="Start" 
                            />
                        </StackLayout>  
                    </ViewCell>                    
                 </TableSection>
                 <TableSection>
                    <ViewCell x:Name="EducationViewCell">
                        <StackLayout  
                             Orientation="Vertical" 
                             BackgroundColor="{DynamicResource LightBackgroundColor}"
                             Padding="30,0,0,0"
                        >
                             <Label VerticalOptions="Center" 
                                    Text="Studied at"
                                    TextColor="{DynamicResource Silver}"
                                    FontSize="Micro"
                                    HorizontalOptions="Start" 
                            />
                            <Label VerticalOptions="Center" 
                                    Text="{Binding Education}"
                                    TextColor="{DynamicResource MainColor}"
                                    HorizontalOptions="Start" 
                            />
                        </StackLayout>  
                    </ViewCell>                    
                 </TableSection>
                 <TableSection>
                    <ViewCell x:Name="EmailViewCell">
                        <StackLayout  
                             Orientation="Vertical" 
                             BackgroundColor="{DynamicResource LightBackgroundColor}"
                             Padding="30,0,0,0"
                        >
                             <Label VerticalOptions="Center" 
                                    Text="Contacts"
                                    TextColor="{DynamicResource Silver}"
                                    FontSize="Micro"
                                    HorizontalOptions="Start" 
                            />
                            <Label  x:Name="EmailLabel"
                                    VerticalOptions="Center" 
                                    Text="{Binding Email}"
                                    TextColor="{DynamicResource MainColor}"
                                    HorizontalOptions="Start" 
                            />
                        </StackLayout>  
                    </ViewCell>                    
                 </TableSection>
                 <TableSection Title="Career">
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" 
                                     BackgroundColor="{DynamicResource LightBackgroundColor}"
                                     Padding="30,0,5,0"
                        >
                            <Label VerticalOptions="Center" 
                                    Text="Statistics"
                                    TextColor="{DynamicResource MainColor}"
                                    HorizontalOptions="Start" 
                            />
                            <Label Text=">"
                                   TextColor="{DynamicResource MainColor}"
                                   HorizontalOptions="EndAndExpand"
                                   VerticalOptions="Center"
                            />
                        </StackLayout>  
                    </ViewCell>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" 
                                     BackgroundColor="{DynamicResource LightBackgroundColor}"
                                     Padding="30,0,5,0"
                        >
                            <Label VerticalOptions="Center" 
                                    Text="Achievements"
                                    TextColor="{DynamicResource MainColor}"
                                    HorizontalOptions="Start" 
                            />
                            <Label Text=">"
                                   TextColor="{DynamicResource MainColor}"
                                   HorizontalOptions="EndAndExpand"
                                   VerticalOptions="Center"
                            />
                        </StackLayout>  
                    </ViewCell>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" 
                                     BackgroundColor="{DynamicResource LightBackgroundColor}"
                                     Padding="30,0,5,0"
                        >
                            <Label VerticalOptions="Center" 
                                    Text="Rating"
                                    TextColor="{DynamicResource MainColor}"
                                    HorizontalOptions="Start" 
                            />
                            <Label Text=">"
                                   TextColor="{DynamicResource MainColor}"
                                   HorizontalOptions="EndAndExpand"
                                   VerticalOptions="Center"
                            />
                        </StackLayout> 
                    </ViewCell>    
                 </TableSection>
               </TableRoot>            
        </local:ColoredTableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

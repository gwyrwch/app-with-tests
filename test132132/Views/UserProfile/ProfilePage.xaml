<?xml version="1.0" encoding="UTF-8"?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="test132132.ProfilePage" xmlns:local="clr-namespace:test132132" Title="Profile">
    <MasterDetailPage.Master>
        <ContentPage Title="kek">
            <StackLayout Spacing="0" Orientation="Vertical">
                <TableView
                    x:Name="MasterPages" 
                    Intent="Menu"
                >
                    <TableRoot>
                         <TableSection Title="Choices">  
                            <ViewCell>
                                <Button Text="My Profile" Clicked="Profile_Clicked"/>
                            </ViewCell>
                            <ViewCell>
                                <Button Text="Settings" Clicked="Settings_Clicked"/>
                            </ViewCell>
                         </TableSection>
                    </TableRoot>
                </TableView>
               <!-- <Button>
                    x:Name="ProfileButton"
                    Text="My Profile"
                    BackgroundColor="{DynamicResource LightBackgroundColor}"
                    BorderRadius="6"
                    BorderWidth="0.6"
                    BorderColor="{DynamicResource Silver}"
                    TextColor="{DynamicResource MainGreyColor}"
                    FontSize="Medium"
                    Clicked="MultipleChoiceQ_Clicked"
                </Button>-->
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
    
    <MasterDetailPage.Detail>
        <ContentPage BackgroundColor="{DynamicResource LightBackgroundColor}" Padding="15,5,5,5">
            <StackLayout Spacing="0">
                <Label Text="Swipe right to see menu"
                       TextColor="{DynamicResource MainGreyColor}"
                       FontSize="Micro"
                       HorizontalOptions="Center"
                       />
                <Image Source="welcomeProfile.png" 
                       VerticalOptions="CenterAndExpand"
                       />                
            </StackLayout>            
        </ContentPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>
